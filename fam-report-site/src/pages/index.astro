  const overlayTextElements = document.querySelectorAll(".overlay-text"); // Assuming this is the correct selector
  const container = document.querySelector(".container"); // Assuming this is the correct selector

  function handleTimeouts(events) {
    let cumulativeTime = 0;

    events.forEach((event) => {
      cumulativeTime += event.duration;

      setTimeout(event.action, cumulativeTime);
    });
  }

  const events = [
    {
      action: () => overlay.classList.add("show"),
      duration: 0,
    },
